@model Vidly.ViewModels.MoviesCollectionViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Movies</h2>

<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Movie</th> <th>Genere</th>
    </tr>
    <thead>
    <tbody>
    @foreach (var movie in @Model.Movies)
    {
        <tr>

            <td>
                @Html.ActionLink(@movie.Name, "detail", "Movies",
                    new {id = movie.Id}, null)</td>
            <td>
                @movie.Genere.GenereName
            </td>
        </tr>
    }
    </tbody>
    <tr></tr>
</table>







